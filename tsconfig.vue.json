{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "./package-vue/src/vue",
		"isolatedModules": true,
		"skipLibCheck": true,
		"types": ["vite/client"]
	},
	"include": ["src/lib/vue/*.vue", "src/lib/vue/index.ts"]
}
